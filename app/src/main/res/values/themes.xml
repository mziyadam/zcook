<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Zcook" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/red_hat</item>
    </style>
    <style name="Heading0">
        <item name="android:textSize" tools:targetApi="o">32sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="Heading1">
        <item name="android:textSize" tools:targetApi="o">24sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="Heading2">
        <item name="android:textSize" tools:targetApi="o">20sp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="Heading3min">
        <item name="android:textSize" tools:targetApi="o">15sp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="Heading3min.bold">
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="Heading3">
        <item name="android:textSize" tools:targetApi="o">16sp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="Heading3.bold">
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="Heading4">
        <item name="android:textSize" tools:targetApi="o">12sp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="Heading4.bold">
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="Paragraph">
        <item name="android:textSize" tools:targetApi="o">11sp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="ParagraphBigger">
        <item name="android:textSize" tools:targetApi="o">14sp</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="ParagraphBigger.Bold">
        <item name="fontFamily">@font/red_hat_bold</item>
    </style>
    <style name="CustomAppBar">
        <item name="cardElevation" tools:targetApi="o">8dp</item>
    </style>
    <style name="CustomEditText">
        <item name="android:padding" tools:targetApi="o">8dp</item>
        <item name="android:textSize" tools:targetApi="o">16sp</item>
    </style>
    <style name="CustomEditText.Rounded">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textColor">@color/light_black</item>
    </style>
    <style name="SmallButton">
        <item name="android:textSize" tools:targetApi="o">14sp</item>
        <item name="android:textStyle" tools:targetApi="o">bold</item>
        <item name="android:backgroundTint">@color/cyan</item>
        <item name="android:paddingTop">@dimen/inter_component_margin_small</item>
        <item name="android:paddingBottom">@dimen/inter_component_margin_small</item>
        <item name="android:paddingStart">@dimen/inter_component_margin_normal</item>
        <item name="android:paddingEnd">@dimen/inter_component_margin_normal</item>
    </style>
</resources>